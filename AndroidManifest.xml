<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
	package="com.coleman.kingword" android:versionCode="1"
	android:versionName="1.0">
	<uses-sdk android:minSdkVersion="7"></uses-sdk>
	<application android:icon="@drawable/icon" android:label="@string/app_name">
		<provider android:name="com.coleman.kingword.provider.KingWordProvider"
			android:authorities="kingword" />
		<activity android:name=".activity.WelcomeActivity"
			android:label="@string/app_name">
			<intent-filter>
				<action android:name="android.intent.action.MAIN" />
				<category android:name="android.intent.category.LAUNCHER" />
			</intent-filter>
		</activity>
		<activity android:name=".activity.WordListActivity"
			android:label="@string/app_name">
		</activity>
		<activity android:name=".activity.SubWordListActivity"
			android:label="@string/app_name">
		</activity>
		<activity android:name=".activity.FileExplorer"
			android:label="@string/app_name">
		</activity>
		<activity android:name=".activity.TextEditor" android:label="@string/app_name">
			<intent-filter>
				<action android:name="edit_text"></action>
				<category android:name="android.intent.category.DEFAULT" />
			</intent-filter>
		</activity>
		<activity android:name=".activity.CoreActivity"
			android:label="@string/app_name" android:theme="@android:style/Theme.NoTitleBar">
		</activity>
	</application>
</manifest>