<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent" android:id="@+id/container"
	android:background="@color/cornsilk">
	<ProgressBar android:layout_width="fill_parent"
		android:layout_alignParentTop="true" android:layout_height="20dp"
		style="@android:style/Widget.ProgressBar.Horizontal" android:id="@+id/progressBar1"></ProgressBar>
	<TextView android:layout_width="fill_parent" android:gravity="center"
		android:textColor="@color/red" android:textStyle="bold|italic"
		android:visibility="invisible" android:layout_alignParentTop="true"
		android:layout_height="20dp" android:id="@+id/continueHitView">
	</TextView>
	<LinearLayout android:id="@+id/linearLayout1"
		android:layout_below="@id/progressBar1" android:layout_width="fill_parent"
		android:layout_height="35dp">
		<TextView android:layout_width="wrap_content" android:text="TextView"
			android:id="@+id/textView1" android:layout_height="fill_parent"
			style="@style/word_title"></TextView>
	</LinearLayout>
	<ListView android:layout_height="fill_parent" android:id="@+id/listView1"
		android:layout_below="@id/linearLayout1" android:layout_above="@+id/linearLayout2"
		android:layout_width="fill_parent"></ListView>
	<ProgressBar android:layout_width="wrap_content"
		android:visibility="gone" android:layout_centerInParent="true"
		style="@android:style/Widget.ProgressBar.Inverse"
		android:layout_height="wrap_content" android:id="@+id/progressBar2"></ProgressBar>
	<LinearLayout android:layout_width="fill_parent"
		android:layout_alignParentBottom="true" android:id="@id/linearLayout2"
		android:layout_height="wrap_content" android:orientation="horizontal"
		style="@android:style/ButtonBar">
		<Button android:id="@+id/viewmore" android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:layout_weight="2"
			android:text="@string/view_more" />
		<Button android:id="@+id/viewraw" android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:layout_weight="2"
			android:text="@string/view_raw" />
		<Button android:id="@+id/upgrade" android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:layout_weight="2"
			android:text="@string/upgrade" />
		<Button android:id="@+id/degrade" android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:layout_weight="2"
			android:text="@string/degrade" />
		<Button android:id="@+id/add_or_remove" android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:layout_weight="2"
			android:text="@string/add_new" />
		<Button android:id="@+id/ignore" android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:layout_weight="2"
			android:text="@string/ignore" />
	</LinearLayout>
</RelativeLayout>
